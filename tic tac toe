def print_board(board):
    """Prints the current state of the board."""
    for row in board:
        print(" | ".join(row))
        print()


def have_won(board, player):
    """Checks if the given player has won."""
    # Check rows
    for row in board:
        if row.count(player) == len(row):
            return True

    # Check columns
    for col in range(len(board[0])):
        if all(row[col] == player for row in board):
            return True

    # Check diagonals
    if all(board[i][i] == player for i in range(len(board))):
        return True
    if all(board[i][len(board) - i - 1] == player for i in range(len(board))):
        return True

    return False


def main():
    """Runs the Tic-Tac-Toe game."""
    board = [[' ' for _ in range(3)] for _ in range(3)]
    players = ['X', 'O']
    current_player = 0
    game_over = False

    while not game_over:
        print_board(board)
        print(f"Player {players[current_player]}, enter row and column (0-2):")
        row, col = map(int, input().split())

        if board[row][col] == ' ':
            board[row][col] = players[current_player]
            game_over = have_won(board, players[current_player])
            if game_over:
                print_board(board)
                print(f"Player {players[current_player]} has won!")
            current_player = (current_player + 1) % 2
        else:
            print("Invalid move. Try again!")


if __name__ == "__main__":
    main()
